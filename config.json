{
  "version": "1.0.0",
  "environment": "production",
  
  "dvsa_credentials": {
    "username": "your_dvsa_username",
    "password": "your_dvsa_password",
    "security_question": "your_security_answer",
    "remember_me": true,
    "auto_login": true
  },

  "booking_preferences": {
    "test_type": "car",
    "test_category": "manual",
    "preferred_centers": [
      "Birmingham (Garretts Green)",
      "Coventry (Mile Lane)",
      "Leicester (Test Centre)"
    ],
    "backup_centers": [
      "Nottingham (Test Centre)",
      "Derby (Alvaston)"
    ],
    "avoid_centers": [
      "London (all)",
      "Manchester (all)"
    ],
    
    "date_preferences": {
      "earliest_date": "2024-01-15",
      "latest_date": "2024-03-31",
      "preferred_days": ["monday", "tuesday", "wednesday", "thursday", "friday"],
      "avoid_weekends": true,
      "specific_dates": ["2024-02-14", "2024-03-15"]
    },
    
    "time_preferences": {
      "morning_slots": true,
      "afternoon_slots": true,
      "evening_slots": false,
      "specific_times": ["09:00", "10:00", "11:00", "13:00", "14:00"],
      "min_time": "08:30",
      "max_time": "16:30"
    },
    
    "slot_priority": {
      "center_priority": 40,
      "date_priority": 35,
      "time_priority": 25,
      "instant_booking": false,
      "max_wait_days": 14
    }
  },

  "browser_settings": {
    "stealth_mode": true,
    "headless": false,
    "user_agent_rotation": true,
    "window_size": "random",
    
    "fingerprint_protection": {
      "canvas_spoofing": true,
      "webgl_spoofing": true,
      "audio_context_spoofing": true,
      "font_fingerprint_protection": true,
      "hardware_spoofing": true,
      "timezone_spoofing": false,
      "language_spoofing": false
    },
    
    "privacy_settings": {
      "clear_cookies_on_exit": true,
      "clear_cache_on_exit": true,
      "disable_images": false,
      "block_third_party_cookies": true
    }
  },

  "automation_settings": {
    "delays": {
      "base_delay": 2.5,
      "random_delay_range": [1, 5],
      "page_load_timeout": 30,
      "element_timeout": 15,
      "between_actions_delay": 0.5
    },
    
    "retry_strategy": {
      "max_retries": 3,
      "retry_delay": 10,
      "exponential_backoff": true,
      "max_backoff_delay": 60
    },
    
    "behavior_simulation": {
      "human_mouse_movements": true,
      "random_clicks": true,
      "typing_variation": true,
      "scroll_behavior": true,
      "thinking_time": true
    },
    
    "monitoring": {
      "check_interval": 300,
      "quick_check_interval": 60,
      "peak_hours_multiplier": 0.5,
      "off_peak_multiplier": 2.0
    }
  },

  "performance_settings": {
    "concurrent_instances": 1,
    "max_memory_usage": 512,
    "cpu_priority": "normal",
    
    "caching": {
      "enable_caching": true,
      "cache_ttl": 3600,
      "clear_cache_on_start": false
    },
    
    "optimizations": {
      "lazy_loading": true,
      "resource_optimization": true,
      "connection_pooling": true
    }
  },

  "notification_settings": {
    "desktop_notifications": true,
    "sound_alerts": true,
    
    "email_notifications": {
      "enabled": false,
      "smtp_server": "smtp.gmail.com",
      "port": 587,
      "sender_email": "your_email@gmail.com",
      "sender_password": "your_app_password",
      "recipient_emails": ["your_email@gmail.com"]
    },
    
    "webhook_notifications": {
      "enabled": false,
      "webhook_url": "https://your-webhook-url.com",
      "secret_key": "your_secret_key"
    }
  },

  "logging_settings": {
    "log_level": "INFO",
    "log_file": "dvsa_automation.log",
    "max_log_size": 10485760,
    "backup_count": 5,
    "json_format": false,
    
    "sensitive_data_masking": {
      "mask_usernames": true,
      "mask_passwords": true,
      "mask_emails": true
    }
  },

  "advanced_settings": {
    "proxy_settings": {
      "use_proxy": false,
      "proxy_type": "http",
      "proxy_server": "proxy.example.com",
      "proxy_port": 8080,
      "proxy_username": "",
      "proxy_password": ""
    },
    
    "debug_mode": {
      "enabled": false,
      "screenshot_on_error": true,
      "html_dump_on_error": false,
      "verbose_console_output": false
    },
    
    "update_settings": {
      "auto_check_updates": true,
      "beta_features": false
    }
  }
}
